{
  "name": "kraken-bot",
  "version": "0.1.0",
  "description": "A Discord bot for Squid's server",
  "private": true,
  "author": "spuggle",
  "license": "Apache-2.0",
  "homepage": "https://github.com/spuggle/kraken-bot#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spuggle/kraken-bot.git"
  },
  "keywords": [
    "discord",
    "chatbot",
    "discord.js"
  ],
  "bugs": {
    "url": "https://github.com/spuggle/kraken-bot/issues"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --pretty --sourceMap --watch",
    "lint": "pnpx eslint src/",
    "lint:commit": "git log -1 --pretty=format:'%B' | commitlint",
    "lint:fix": "pnpx eslint --fix src/",
    "postinstall": "tsc",
    "start": "node dist/index.js",
    "test": "echo 'Error: no test specified' && exit 1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "husky": "^8.0.1",
    "tslib": "^2.4.0",
    "type-fest": "^2.14.0",
    "typescript": "^4.7.4"
  },
  "type": "module",
  "commitlint": {
    "extends": [
      "./.github/configs/commitlint.json"
    ]
  },
  "eslintConfig": {
    "extends": "./.eslint/all.json",
    "root": true,
    "env": {
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2022
    }
  },
  "dependencies": {
    "@discordjs/builders": "^0.15.0",
    "@discordjs/rest": "^0.5.0",
    "discord-api-types": "^0.34.0",
    "discord.js": "^13.8.1",
    "dotenv": "^16.0.1"
  }
}
